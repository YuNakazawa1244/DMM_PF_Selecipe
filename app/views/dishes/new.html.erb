<h1>レシピの新規投稿ページ</h1>

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">

<h2>User info</h2>
  <%#= attachment_image_tag user, :profile_image,:fill,60,60,format:'jpeg',fallback: "no_image.jpeg" %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%#= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%#= user.introduction %></th>
      </tr>
        <tr>
        <th>follows</th>
        <th><%#= link_to user.following.count, user_followings_path(user) %></th>
      </tr>
        <tr>
        <th>followers</th>
        <th><%#= link_to user.followers.count, user_followers_path(user) %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
  <%# if current_user != user %>
    <%# if current_user.following?(user) %>
      <%#= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
    <%# else %>
      <%#= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
    <%# end %>
  <%# end %>
  </div>
  </br>
  <%#= link_to "",edit_user_path(user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

  <h2 class="mt-3">New book</h2>
      <%#= form_with model:book,url:'/books',local:true do |f|%>
  <div class="form-group">
    <label for="book_title">Title</label><br>
      <%#= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label><br>
      <%#= f.text_area :body %>
  </div>
  <div class="form-group">
      <%#= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
      <%# end %>
</div>
<div class="col-md-7 offset-md-1">
  <h2>新規レシピ投稿</h2>
<table class="table table-hover table-inverse">
  <%= form_with model: @dish, local:true do |f| %>
    <%#= attachment_image_tag @dish, :image, :fill, 60, 60, fallback:"no_image.jpg" %>
    <%= f.attachment_field :image, placeholder:"料理画像" %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    <%= f.text_field :name %>
    
    <%= f.submit "変更を保存" %>
  <% end %>

</table>
</div>


</div>
</div>